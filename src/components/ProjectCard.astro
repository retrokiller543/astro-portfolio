---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  projectUrl: string;
}

const { title, description, image, projectUrl } = Astro.props;
const transitionName = title.replace(/\s+/g, '-').toLowerCase();
---

<div class="column is-one-third" transition:name={`project-${transitionName}`}>
  <div class="card">
    <div class="card-image" transition:name={`project-image-${transitionName}`}>
      <figure class="image" transition:name={`project-figure-${transitionName}`}>
        <Image src={image} alt={title} quality={"low"} />
      </figure>
    </div>
    <div class="card-content" transition:name={`project-content-${transitionName}`}>
      <p class="title is-4" transition:name={`project-title-${transitionName}`}>{title}</p>
      <p class="subtitle is-6" transition:name={`project-description-${transitionName}`}>{description}</p>
      <a href={projectUrl} class="button is-link" transition:name={`project-button-${transitionName}`}>View Project</a>
    </div>
  </div>
</div>