---
import ThemeSelector from "./vue/ThemeSelector.vue";
---

<nav class="navbar is-fixed-top has-shadow" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item has-text-weight-bold" href="/" id="navbar-logo">Portfolio</a>
    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navMenu">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div class="navbar-menu" id="navMenu">
    <div class="navbar-start">
      <a class="navbar-item" href="/">Home</a>
      <a class="navbar-item" href="/about">About</a>
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">Projects</a>
        <div class="navbar-dropdown">
          <a class="navbar-item" href="/cryptography">Cryptography</a>
          <a class="navbar-item" href="#">Blog</a>
        </div>
      </div>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <ThemeSelector client:only="vue" />
      </div>
    </div>
  </div>
</nav>

<style lang="scss">
  $navbar-background: #2c3e50;
  $navbar-text-color: #ecf0f1;
  $navbar-hover-color: lighten($navbar-text-color, 10%);
  $active-link-border-color: #3498db;

  .navbar {
    background-color: $navbar-background;
    color: $navbar-text-color;

    .navbar-item,
    .navbar-link {
      color: $navbar-text-color;
      &:hover {
        color: $navbar-hover-color;
        background-color: transparent;
      }
    }

    .navbar-item.is-active {
      font-weight: bold;
      border-bottom: 2px solid $active-link-border-color;
    }

    .navbar-burger {
      color: $navbar-text-color;
      &:hover {
        color: $navbar-hover-color;
      }
      span {
        background-color: $navbar-text-color;
        transition: background-color 0.3s ease;
      }
    }

    .navbar-menu {
      .navbar-item {
        border-radius: 16px;
        &:hover {
          background-color: rgba(255, 255, 255, 0.1);
        }
      }
    }
  }

  // Ensure the ThemeSelector is well-aligned and matches the styling
  .navbar-end .navbar-item {
    padding-right: 1.5rem;
  }
</style>
