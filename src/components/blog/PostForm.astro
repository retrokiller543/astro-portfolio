---
import { type BlogPost } from "@/api/BlogClient";

export interface Props {
  post?: BlogPost;
}

const { post } = Astro.props;
---

<div>
  <form onsubmit="submit" id="post-form">
    <div class="field">
      <label class="label" for="title">Title</label>
      <div class="control">
        <input class="input" type="text" id="title" placeholder="Title" value={post && post.title} />
      </div>
    </div>

    <div class="field">
      <label class="label" for="content">Content</label>
      <div class="control">
        <textarea class="textarea" id="content"></textarea>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link" type="submit">Submit</button>
      </div>
    </div>
  </form>
</div>

<script>
  import BlogApiClient, { type BlogPost } from "@/api/BlogClient";

  function submit(event: SubmitEvent) {
    event.preventDefault();

    const titleValue = (document.getElementById("title") as HTMLInputElement).value;
    const contentValue = (document.getElementById("content") as HTMLTextAreaElement).value;

    const post: BlogPost = {
      title: titleValue,
      content: contentValue,
    };

    new BlogApiClient().createPost(post);
  }

  document.addEventListener("astro:page-load", () => {
    document.getElementById("post-form")?.addEventListener("submit", submit);
  });
</script>
