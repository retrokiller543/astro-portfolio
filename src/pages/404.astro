---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Shielded Rust - 404">
	<main class="has-text-centered is-flex is-flex-direction-column is-justify-content-center is-align-items-center" style="height: 100vh;">
		<h1 class="title">404 - Page Not Found</h1>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
              const backButton = document.getElementById("backButton")! as HTMLAnchorElement;
              if (document.referrer && document.referrer !== window.location.href) {
                backButton.href = document.referrer;
              } else {
                backButton.style.display = 'none'; // Hide the button if there's no referrer
              }
            });
          </script>

		<a href="/" class="button is-link" id="backButton">Return to Home</a>
	</main>
</Layout>