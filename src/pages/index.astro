---
import Layout from "@layouts/Layout.astro";
import ProjectsSection from "@components/ProjectsSection.astro";

import netScanner from "@assets/images/net-scanner.webp";
import rusticRTMP from "@assets/images/rustic_rtmp.webp";
import shieldedRust from "@assets/images/shielded-rust.webp";

const projects = [
  {
    title: "Cryptographic Library",
    description:
      "This library is designed for use in cryptography courses and includes a variety of algorithms, both standard and custom. While still in an early stage, it serves as a practical resource for learning and experimentation.",
    image: shieldedRust,
    projectUrl: "/cryptography",
  },
  {
    title: "Rustic RTMP",
    description: "A RTMP implementation in Rust. (not complete)",
    image: rusticRTMP,
    projectUrl: "/rtmp",
  },
  {
    title: "Ferric Net Scanner",
    description: "A network scanner in Rust.",
    image: netScanner,
    projectUrl: "https://github.com/retrokiller543/ferric_net_scanner",
  },
];
---

<Layout title="Home">
  <section class="hero is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title">Welcome to My Portfolio</h1>
        <h2 class="subtitle">Showcasing my work in web development and cybersecurity.</h2>
        <a class="button is-link is-large" href="#projects">Explore My Projects</a>
      </div>
    </div>
  </section>

  <ProjectsSection projects={projects} />
</Layout>

<style lang="scss">
  .hero {
    background-color: var(--bulma-background);
    margin-top: -7rem;
  }
</style>
